<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoinFlip.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                x:Name="ResultLabel"
                FontSize="Large"
                HorizontalOptions="Center"
                Text="Cara ou Coroa!"/>

            <Image
                x:Name="MoedaImage"
             
                HeightRequest="185"
                Aspect="AspectFit"/>

            <Picker x:Name="SelecaoPicker">
                <Picker.Items>
                    <x:String>Cara</x:String>
                    <x:String>Coroa</x:String>
                </Picker.Items>
            </Picker>

            <Button
                x:Name="JogarButton"
                Text="Jogar"
                Clicked="JogarButton_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
